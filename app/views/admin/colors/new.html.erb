<div class="container-div page-body">
  <div>
    <div class="col-xs-12" align="center">
      <u><h2>Colors</h2></u>
    </div>
    <div class="col-xs-12 no-left-pad">
      <div class="col-md-2 col-md-offset-2">
        <h3>
          <%= link_to admin_colors_path, class: "btn btn-blue" do %>
             Back
          <% end %>
        </h3>
      </div>
    </div>
  </div>

  <div class="col-xs-8 col-xs-offset-2">
    <table class="table table-bordered table-striped" >
      <thead>
      <tr>
        <th class="col-xs-1">Id</th>
        <th class="col-xs-4">Name</th>
        <th class="col-xs-5">Description</th>
        <th class="col-xs-2">Action</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td></td>
        <%= form_for @color, url: admin_colors_path do |f| %>
          <td><%= f.text_field :name, class: 'form-control feedr-main-input input', required: true %></td>
          <td><%= f.text_field :description, class: 'form-control input feedr-main-input', required: true %></td>
          <td>
            <%= f.submit "Save", class: 'btn btn-green' %>
          </td>
        <% end %>
      </tr>
      <% Color.all.each do |color| %>
        <tr>
          <td><%= color.id%></td>
          <td><%= color.name%></td>
          <td><%= color.description%></td>
          <td>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="page_links ppl">
      <%#= will_paginate @locations%>
    </div>
  </div>
</div>
