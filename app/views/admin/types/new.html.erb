<div class="container-div page-body">
  <div>
    <div class="col-xs-12" align="center">
      <u><h2> Types </h2></u>
    </div>
    <div class="col-xs-12 no-left-pad">
      <div class="col-md-2 col-md-offset-2">
        <h3>
          <%= link_to admin_types_path, class: "btn btn-blue" do %>
             Back
          <% end %>
        </h3>
      </div>
    </div>
  </div>

  <div class="col-xs-8 col-xs-offset-2">
    <table class="table table-bordered table-striped" >
      <thead>
      <tr>
        <th class="col-xs-1">Id</th>
        <th class="col-xs-1">Color</th>
        <th class="col-xs-4">Name</th>
        <th class="col-xs-5">Description</th>
        <th class="col-xs-1">Action</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td></td>
        <%= form_for @type, url: admin_types_path do |f| %>
          <td><%= f.select :color_id, Color.all.pluck(:name, :id), {include_blank: "--Color--"},
                           { class: 'feedr-main-select form-control ','data-behavior' => "chosen-select", required: true}%></td>
          <td><%= f.text_field :name, class: 'form-control feedr-main-input input', required: true %></td>
          <td><%= f.text_field :description, class: 'form-control input feedr-main-input', required: true %></td>
          <td>
            <%= f.submit "Save", class: 'btn btn-green' %>
          </td>
        <% end %>
      </tr>
      <% Type.all.each do |type| %>
        <tr>
          <td><%= type.id%></td>
          <td><%= Color.find_by(:id => type.color_id).name %></td>
          <td><%= type.name%></td>
          <td><%= type.description%></td>
          <td>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="page_links ppl">
      <%#= will_paginate @locations%>
    </div>
  </div>
</div>
